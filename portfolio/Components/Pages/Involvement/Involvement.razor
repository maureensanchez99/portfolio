@inherits InvolvementBase
@page "/involvement"

<PageTitle>Involvement</PageTitle>

<h1>Here's what I've been involved in throughout my academic career</h1>

<h2>Louisiana State University</h2>
<div class="container">
    @foreach (var volunteer in volunteerDetails.Where(p => p.Type == "LSU")) {
        <div class="volunteer">
            <div class="volunteer-details">
                <h4>@volunteer.Event</h4>
                <h4 style="font-style: italic;">@volunteer.Group</h4>
                <p>
                    @volunteer.Date 
                    <br/>
                    @volunteer.Description
                </p>
            </div>
            <img class="vlntr-image" src="@volunteer.ImagePath" alt="@volunteer.Event"/>
        </div>
    }
</div>


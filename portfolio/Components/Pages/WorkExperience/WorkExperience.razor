@inherits WorkBase
@page "/workexperience"
@using Radzen

<PageTitle>Work Experience</PageTitle>

<h2>Here is a full timeline of all my work experience</h2>

<p>
    I've worked a number of jobs ranging from part-time to temporary employment to internships, 
    with not all of them relating to what I'm studying.
</p>

<div class="timeline">
    <h2>My Academic Journey</h2>
    <RadzenTimeline>
        <Items>
            @foreach (var timelineEvent in timelineEvents)
            {
                <RadzenTimelineItem PointStyle="PointStyle.Primary" PointShadow="6">
                    <LabelContent>
                        <RadzenText TextStyle="TextStyle.Subtitle2" class="rz-m-0">@timelineEvent.TimeWorked </RadzenText>
                    </LabelContent>
                    <ChildContent>
                        @timelineEvent.Company
                        <br/>
                        @timelineEvent.Position
                        <br/>
                        @timelineEvent.Description
                    </ChildContent>
                </RadzenTimelineItem>
            }
        </Items>
    </RadzenTimeline>
</div>